@model Usuario

<form method="post">
    <fieldset>
        <legend>Dados do Endereço</legend>
        <div asp-validation-summary="ModelOnly"></div>

        <!-- se necessário, pesquisar por "Tag helper" -->
        <div class="form-group" id="Cep">
            <label asp-for="Endereco.Cep"></label>
            <input type="text" asp-for="Endereco.Cep"
                   class="form-control" />
        </div>

        <input type="submit" value="Buscar" asp-action="BuscarCep" asp-controller="Usuario"
               class="btn btn-primary mb-2" />

        <div class="form-group" id="Cep">
            <label asp-for="Endereco.Cep"></label>
            <input type="text" asp-for="Endereco.Cep"
                   class="form-control" readonly />
            <span asp-validation-for="Endereco.Cep" class="text-danger"></span>
        </div>

        <div class="form-group" id="Logradouro">
            <label asp-for="Endereco.Logradouro"></label>
            <input type="text" asp-for="Endereco.Logradouro"
                   class="form-control" readonly />
            <span asp-validation-for="Endereco.Logradouro" class="text-danger"></span>
        </div>

        <div class="form-group" id="Bairro">
            <label asp-for="Endereco.Bairro"></label>
            <input type="text" asp-for="Endereco.Bairro"
                   class="form-control" readonly />
            <span asp-validation-for="Endereco.Bairro" class="text-danger"></span>
        </div>

        <div class="form-group" id="Localidade">
            <label asp-for="Endereco.Localidade"></label>
            <input type="text" asp-for="Endereco.Localidade"
                   class="form-control" readonly />
            <span asp-validation-for="Endereco.Localidade" class="text-danger"></span>
        </div>

        <div class="form-group" id="Uf">
            <label asp-for="Endereco.Uf"></label>
            <input type="text" asp-for="Endereco.Uf"
                   class="form-control" readonly />
            <span asp-validation-for="Endereco.Uf" class="text-danger"></span>
        </div>

    </fieldset>
</form>