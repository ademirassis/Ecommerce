@model Produto

<form asp-action="Cadastrar" method="post">
    <fieldset>
        <legend>Cadastrar Produto</legend>

        <!-- se necessário, pesquisar por "Tag helper" -->
        <div class="form-group" id="Nome">
            <label>Nome:</label>
            <input type="text" asp-for="Nome"
                   class="form-control" />
        </div>

        <div class="form-group" id="Drescricao">
            <label>Descrição:</label>
            <input type="text" asp-for="Descricao"
                   class="form-control" />
        </div>

        <div class="form-group" id="Preco">
            <label>Preço:</label>
            <input type="text" asp-for="Preco"
                   class="form-control" />
        </div>

        <div class="form-group" id="Quantidade">
            <label>Quantidade:</label>
            <input type="text" asp-for="Quantidade"
                   class="form-control" />
        </div>

        @*<input type="submit" value="Cadastrar" />*@
        <button type="submit" value="Cadastrar" class="btn btn-primary mb-2">Cadastrar</button>
    </fieldset>
</form>
