@{
    Produto produto = ViewBag.Produto;
}


<form asp-action="Alterar" method="post">
    <fieldset>
        <legend>Alterar Produto</legend>

        <!-- se necessário, pesquisar por "Tag helper" -->
        <input type="hidden" name="txtId" readonly="" value="@produto.ProdutoId" />

        <div class="form-group" id="Nome">
            <label>Nome:</label>
            <input class="form-control" type="text" name="txtNome" value="@produto.Nome" />
        </div>

        <div class="form-group" id="Descricao">
            <label>Descrição:</label>
            <input class="form-control" type="text" name="txtDescricao" value="@produto.Descricao" />
        </div>

        <div class="form-group" id="Preco">
            <label>Preço:</label>
            <input class="form-control" type="text" name="txtPreco" value="@produto.Preco" />
        </div>

        <div class="form-group" id="Quantidade">
            <label>Quantidade:</label>
            <input class="form-control" type="text" name="txtQuantidade" value="@produto.Quantidade" />
        </div>

        <button type="submit" value="Salvar" class="btn btn-primary">Salvar</button>
    </fieldset>
</form>
